---
const { currentPath = "/tools/sekigae" } = Astro.props;
const items = [
  { href: "/tools/sekigae", label: "サポート" },
  { href: "/tools/sekigae/privacy-policy", label: "プライバシーポリシー" },
  { href: "/tools/sekigae/terms-of-use", label: "利用規約" },
];
---

<nav class="flex flex-wrap gap-2" aria-label="席替えアプリ 関連ページ">
  {items.map((item) => (
    <a
      href={item.href}
      aria-current={currentPath === item.href ? "page" : undefined}
      class:list={[
        "rounded-full border px-3 py-1.5 text-sm transition",
        currentPath === item.href
          ? "border-indigo-400 bg-indigo-500/20 text-indigo-700 dark:text-indigo-100"
          : "border-slate-300 text-slate-700 hover:border-slate-500 hover:text-slate-900 dark:border-slate-700 dark:text-slate-300 dark:hover:text-slate-100"
      ]}
    >
      {item.label}
    </a>
  ))}
</nav>
