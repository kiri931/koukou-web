---
import Layout from '../../layouts/Layout.astro';
import { Header } from '../../components/Header';
import { TypingGame } from '../../features/typing-japanese';
import '../../styles/global.css';
---

<Layout
  title="タイピング練習 - ツール"
  description="ひらがな・ローマ字入力のタイピング練習ゲーム。難易度・制限時間を選んで楽しく日本語タイピングを習得できます。ブラウザのみで動作。"
>
  <div class="min-h-screen bg-slate-50 dark:bg-slate-950">
    <Header client:load currentPath="/tools/typing-japanese" />
    <h1 class="sr-only">タイピング練習</h1>
    <TypingGame client:only="react" />
  </div>
  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      name: "タイピング練習",
      applicationCategory: "UtilitiesApplication",
      operatingSystem: "Web Browser",
      offers: { "@type": "Offer", price: "0", priceCurrency: "JPY" },
      inLanguage: "ja-JP",
      url: "https://koukou-jouhou.org/tools/typing-japanese",
    })}
  />
</Layout>
